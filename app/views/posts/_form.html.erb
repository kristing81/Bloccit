<%= simple_form_for [topic, post], html: { class: 'form-vertical' }  do |f| %>
    <%= f.input :title, placeholder: "Enter post title" %>
    <%= f.input :body, placeholder: "Enter post body"%>
    <%= f.button :submit, class: 'btn btn-success' %>  
    <%= f.submit "Save", class: 'btn btn-success' %>
    <%= f.input :image, placeholder: "Upload image" %>
<% end %> 



